<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BindingIsFun.Views.PokemonDetailsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Grid Margin="0,10" RowDefinitions="*,*,*,*">

        <Border StrokeShape="{OnPlatform RoundRectangle 60, WinUI=RoundRectangle 40}" StrokeThickness="0">
            <Image Aspect="AspectFill" Source="pokemon.png" />
        </Border>

        <Border
            BackgroundColor="Wheat"
            HeightRequest="{OnIdiom 110,
                                    Tablet=120}"
            StrokeShape="RoundRectangle 60"
            StrokeThickness="3"
            WidthRequest="{OnIdiom Default=110,
                                   Tablet=120}">
            <Image
                Aspect="AspectFit"
                HeightRequest="110"
                Source="{Binding Source={x:RelativeSource Self}, Path=BindingContext, TargetNullValue='https://upload.wikimedia.org/wikipedia/commons/thumb/d/d2/Question_mark.svg/585px-Question_mark.svg.png'}"
                WidthRequest="110" />
        </Border>

        <Label
            Grid.Row="1"
            Margin="0,-190,0,0"
            BackgroundColor="White"
            FontSize="25"
            HeightRequest="63"
            HorizontalTextAlignment="Center"
            Text="שם פוקימון"
            TextColor="Chocolate"
            WidthRequest="150" />



