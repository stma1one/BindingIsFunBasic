            <Label VerticalOptions="Center"
                   Text=":מיקום"
                   TextColor="Red"
                   FontSize="Large" />
            <Label VerticalOptions="Center"
                   Text="{Binding Location}"
                   FontSize="Large" />
        </FlexLayout>-->
        <Grid
            Grid.Row="2"
            Margin="-100"
            ColumnDefinitions="auto,auto,auto,auto"
            HorizontalOptions="Center"
            RowDefinitions="auto,auto">
            <Label
                Margin="5"
                FontSize="Large"
                Text=":סוג"
                TextColor="Red"
                VerticalOptions="Center" />
            <Label
                Grid.Column="1"
                FontSize="Large"
                Text="סוג"
                VerticalOptions="Center" />
            <Label
                Grid.Column="2"
                Margin="5"
                FontSize="Large"
                Text=":נקודות פגיעה"
                TextColor="Red"
                VerticalOptions="Center" />
            <Label
                Grid.Column="3"
                FontSize="Large"
                Text="נקודות פגיעה"
                VerticalOptions="Center" />

            <Label
                Grid.Row="1"
                FontSize="Large"
                Text=":מיקום"
                TextColor="Red"
                VerticalOptions="Center" />
            <Label
                Grid.Row="1"
                Grid.Column="1"
                Grid.ColumnSpan="3"
                FontSize="Large"
                Text="מיקום"
                VerticalOptions="Center" />
        </Grid>
        <Button
            Grid.Row="3"
            Clicked="Button_Clicked"
            CornerRadius="40"
            FontSize="25"
            HeightRequest="80"
            Text="עדכן תמונה"
            WidthRequest="150" />

    </Grid>
</ContentPage>
